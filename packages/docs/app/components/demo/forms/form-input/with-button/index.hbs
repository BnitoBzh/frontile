<DocsDemo as |demo|>
  {{#demo.example name="demo-forms-form-input-with-button-index.hbs"}}
    <FormInput
      @value={{this.value}}
      @onInput={{this.setValue}}
      @label="Referral Code"
      @errors={{this.validationErrors}}
      @onChange={{this.validate}}
      placeholder="Input your URL or 6 Digit referral code"
      class="rounded-r-none"
    >
      <button
        type="button"
        {{on "click" this.validate}}
        class="px-4 py-2 border text-gray-100 rounded-r
        {{if this.isValid "bg-green-800 border-green-800 hover:bg-green-700" "bg-indigo-800 border-indigo-800 hover:bg-indigo-700"}}"
      >
        {{#if this.isValid}}
          <span>
            Code Applied
          </span>
        {{else}}
          Apply
        {{/if}}
      </button>
    </FormInput>
  {{/demo.example}}

  <demo.snippet
    @name="demo-forms-form-input-with-button-index.hbs"
    @label="components/with-button.hbs"
  />
  <demo.snippet
    @name="demo-forms-form-input-with-button-index.js"
    @label="components/with-button.js"
  />
</DocsDemo>
