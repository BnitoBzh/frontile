<DocsDemo as |demo|>
  {{#demo.example name="demo-forms-form-select-multiple-index.hbs"}}
    <FormSelect
      @isMultiple={{true}}
      @hint="Select all countries you have lived"
      @errors={{this.countryErrors}}
      @allowClear={{true}}
      @label="Countries"
      @options={{this.countries}}
      @selected={{this.selectedCountries}}
      @onChange={{this.setCountry}}
      as |country|
    >
      {{country}}
    </FormSelect>

    <p class="mt-4">
      You selected, "{{this.selectedCountries}}"
    </p>

  {{/demo.example}}

  <demo.snippet
    @name="demo-forms-form-select-multiple-index.hbs"
    @label="components/multiple.hbs"
  />
  <demo.snippet
    @name="demo-forms-form-select-multiple-index.js"
    @label="components/multiple.js"
  />
</DocsDemo>
