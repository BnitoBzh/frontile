<FormCheckbox
  @onChange={{this.handleChange}}
  @checked={{this.value}}

  @hint={{@hint}}
  @name={{@name}}
  @containerClass={{@containerClass}}
  @isSmall={{@isSmall}}
  @isLarge={{@isLarge}}

  ...attributes
>
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{@label}}
  {{/if}}
</FormCheckbox>
