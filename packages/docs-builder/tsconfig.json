{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "target": "es2016",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmitOnError": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": {
      "*": ["types/*"]
    },
    "typeRoots": ["../../node_modules/@types", "types"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
