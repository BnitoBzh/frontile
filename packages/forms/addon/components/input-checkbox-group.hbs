<FormField
  @hasMargin={{@hasMargin}}
  @isSmall={{@isSmall}}
  class="input-checkbox-group
    {{if this.showErrorFeedback "has-error"}}
    {{if @isInline "input-checkbox-group-inline"}}
    {{if @hasButton "has-button"}}"
    role="group"
  ...attributes
  as |f|
>
  {{#if @label}}
    <f.Label>{{@label}}</f.Label>
  {{/if}}

  {{#if @hint}}
    <f.Hint>{{@hint}}</f.Hint>
  {{/if}}

  {{yield (component "input-checkbox"
            _parentOnChange=this.handleChange
          )
  }}

  {{#if this.showErrorFeedback}}
    <f.Feedback @errors={{@errors}} />
  {{/if}}
</FormField>
