<div
  id={{@id}}
  class="form-field-feedback {{if this.isError "is-error"}} {{if @isSmall "form-field-feedback-sm" (if @isLarge "form-field-feedback-lg")}}"
  data-test-id="form-field-feedback"
  aria-live={{if this.isError "assertive" "polite"}}
  ...attributes
>
  {{this.errorMessage}}
  {{yield}}
</div>
