<div
  id={{@id}}
  class="form__feedback {{if this.isError "form__feedback--state-error"}} {{if @isSmall "form__feedback--sm" (if @isLarge "form__feedback--lg")}}"
  data-test-id="form-field-feedback"
  aria-live={{if this.isError "assertive" "polite"}}
  ...attributes
>
  {{this.errorMessage}}
  {{yield}}
</div>
