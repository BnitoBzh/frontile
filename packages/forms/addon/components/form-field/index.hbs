<div
  class="form-field {{if @isSmall "is-small"}}"
  ...attributes
>
  {{yield
    (hash
      id=this.id
      hintId=this.hintId
      feedbackId=this.feedbackId

      Label=(component "form-field/label" for=this.id)
      Hint=(component "form-field/hint" id=this.hintId)
      Feedback=(component "form-field/feedback" id=this.feedbackId)

      Input=(component "form-field/input" id=this.id)
      Textarea=(component "form-field/textarea" id=this.id)
      Checkbox=(component "form-field/checkbox" id=this.id)
      Radio=(component "form-field/radio" id=this.id)
    )
  }}
</div>
