<FormField
  @hasMargin={{@hasMargin}}
  @isSmall={{@isSmall}}
  class="input-radio"
  as |f|
>
  <FormField::Radio
    {{on "focus" this.handleFocusIn}}
    {{on "blur" this.handleFocusOut}}

    @onChange={{this.handleChange}}
    @id={{f.id}}
    @value={{@value}}
    @checked={{@checked}}
    @name={{@name}}

    aria-describedby={{if @hint f.hintId}}
    ...attributes
  />

  <f.Label
    class={{if this.isFocused "is-focused"}}
  >
   {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{@label}}
    {{/if}}
  </f.Label>

  {{#if @hint}}
    <f.Hint>{{@hint}}</f.Hint>
  {{/if}}
</FormField>
