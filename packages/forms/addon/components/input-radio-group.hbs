<FormField
  @hasMargin={{@hasMargin}}
  @isSmall={{@isSmall}}
  class="input-radio-group
    {{if this.showErrorFeedback "has-error"}}
    {{if @isInline "input-radio-group-inline"}}
    {{if @hasButton "has-button"}}"
    role="radiogroup"
  ...attributes
  as |f|
>
  {{#if @label}}
    <f.Label>{{@label}}</f.Label>
  {{/if}}

  {{#if @hint}}
    <f.Hint>{{@hint}}</f.Hint>
  {{/if}}

  {{yield (component "input-radio"
            checked=@value
            _parentOnChange=this.handleChange
            name=(concat f.id "-radio-group")
          )
  }}

  {{#if this.showErrorFeedback}}
    <f.Feedback @errors={{@errors}} />
  {{/if}}
</FormField>
