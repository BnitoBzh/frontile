<FormField
  @hasMargin={{@hasMargin}}
  @isSmall={{@isSmall}}
  class="input-checkbox"
  as |f|
>
  <input
    {{on "focus" this.handleFocusIn}}
    {{on "blur" this.handleFocusOut}}
    {{on "change" this.handleChange}}
    id={{f.id}}
    type="checkbox"
    checked={{this.isChecked}}
    name={{@name}}
    aria-describedby={{if @hint f.hintId}}
    ...attributes
  >

  <f.Label
    class={{if this.isFocused "is-focused"}}
  >
   {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{@label}}
    {{/if}}
  </f.Label>

  {{#if @hint}}
    <f.Hint>{{@hint}}</f.Hint>
  {{/if}}
</FormField>
