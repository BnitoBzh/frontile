<FormField
  @isSmall={{@isSmall}}
  @isLarge={{@isLarge}}
  class="form-radio-group
    {{if @isInline "form-radio-group--inline"}} {{@containerClass}}
    {{if @isSmall "form-radio-group--sm" (if @isLarge "form-radio-group--lg")}}"
    role="radiogroup"
  ...attributes
  as |f|
>
  {{#if @label}}
    <f.Label>{{@label}}</f.Label>
  {{/if}}

  {{#if @hint}}
    <f.Hint>{{@hint}}</f.Hint>
  {{/if}}

  {{yield (component "form-radio"
            checked=@value
            _parentOnChange=this.handleChange
            isSmall=@isSmall
            isLarge=@isLarge
            name=(concat f.id "-radio-group")
          )
  }}

  {{#if this.showErrorFeedback}}
    <f.Feedback @errors={{@errors}} />
  {{/if}}
</FormField>
